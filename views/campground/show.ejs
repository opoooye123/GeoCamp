<% layout('./layouts/boilerplate')%>
    <div class="glass-card">
        <div class="card-body">
            <div class="text-center mb-3">
                <img src="<%= campShow.image %>" class="img-fluid rounded" alt="Campground Image"
                    style="max-height: 300px; object-fit: cover;">
            </div>
            <h3 class="card-title text-primary text-center mb-3">
                <%= campShow.title %>
            </h3>
            <p class="card-text text-muted">
                <%= campShow.description %>
            </p>
            <p class="card-text text-end">
                <small class="text-muted">Last updated 3 mins ago</small>
            </p>
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" href="/campgrounds">← Back</a>
                <a class="btn btn-primary" href="/campgrounds/<%= campShow._id %>/edit">Edit ✎</a>
            </div>
        </div>
    </div>